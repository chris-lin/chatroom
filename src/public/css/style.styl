@import 'nib'

// Some settings
$font-size = 14px
$line-height = 1.5

// Some sugar functions
gap(multiplier)
  return $font-size * $line-height * multiplier

// Width
w(val)
  width val

// Height
h(val)
  height val

// Padding 
p()
  padding arguments

// Margin
m()
  margin arguments
  
c()
  color arguments

b()
  border 1px solid arguments

// Colors
$time = #aaa
$user-name = #195073
$system-msg = #7F8C1F
$chat-input-border = #eee
$button-color = #195073
$white = #fff


// Actual code
body
  padding 50px
  font-size 16px

a
  c #195073
  
h1
  text-align center
  font-size 2em
  
// Header stuff, just sugar, not important
.hd
  width 95%
  margin 0 auto

  .l, .r
    display inline-block
    width 50%
    
  .l
    text-align left
  
  .c
    text-align center  
  
  .r
    text-align right

.chatroomName
  p gap(0.5)
  b black

.chatBox
  b black
  
.chat-usersBox  
  b black
  h 400px
  overflow-y auto

.chat-usersList
  font-size 18px
  b black

.chat-usersList li
  line-height 26px 
  b black

.messagesBox
  b black
  
.chat
  width 95%
  margin 0 auto
  border 1px solid #eee

.chat-bd
  h(400px)
  overflow-y auto

.chat-msgs
  p gap(1)
      
.chat-msg-time
  c $time
  margin-right gap(0.4)

.chat-msg-user
  font-weight bold
  margin-right gap(0.4)
  c $user-name

.chat-system-msg 
  c $system-msg

.chat-ft
  padding gap(0.5)

.chat-form 
  overflow hidden
  
.chat-input-wrapper
  overflow hidden
  p gap(0.5)
  border 1px solid $chat-input-border
  
.chat-input
  font-size 21px
  width 100%
  margin 0 
  padding 0
  border none
  
  &:focus
    outline none
    box-shadow 0
  
.chat-submit
  font-size 20px
  float right
  margin-left gap(0.5)
  p gap(0.5)
  border none
  c $white

// -------------  login css style -------------

#list 
  w(283px)
  margin 0 auto
  p 20px 0 15px
  position relative


