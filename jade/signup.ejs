<h1 id="page-title">Sign up</h1>

<% if( typeof(errors) !== 'undefined' ) { %>
<center>
  <%= errors %>
</center>
<% } %>

<div id="list">
  <form action="/signup" method="post" accept-charset="utf-8">
    <div class="item-new">
      帳號 <input class="input" type="text" name="login" />
    </div>
    <div class="item-new">
      密碼 <input class="input" type="password" name="password" />
    </div>
    <div class="item-new">
      <input type="submit" value="註冊" />
    </div>
  </form>

</div>
