<% if (everyauth.loggedIn) { %>

<div class="navbar navbar-fixed-top title-bar">
  <div class="navbar-inner title-bar-inner">
    <div class="container-fluid">
      <button class="btn btn-navbar btn-top-tools">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" href="#" data-toggle="dropdown">
          <i class="icon-user"></i>
          <span id="userName"><%= user.name || user.id %></span>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="#">帳號資料</a>
          </li>
          <li class="divider"></li>
          <li>
            <a href="/logout">登出</a>
          </li>
        </ul>
      </div>
      <h1> <%= title %> </h1>
      <div class="nav-collapse"></div>
    </div>
  </div>
</div>

<div class="container-fluid">

  <div class="row-fluid">
    <div class="span10 chatBox">
      <div class="row-fluid">
        <div class="span12">
          <div class="chat">
            <div class="chat-bd">
              <div class="chat-msgs"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 messagesBox">
          <div class="chat-ft">
            <form class="chat-form">
              <input class="chat-submit btn btn-primary" type="submit" value="送出">
              <div class="chat-input-wrapper">
                <input class="chat-input" type="text" placeholder="輸入訊息">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="span2 chat-usersBox">
      <div class="chat-users">
          <div class="c">
            <span class="online-users"></span>
          </div>
        <div class="well sidebar-nav">
          <ul class="nav nav-list chat-usersList"></ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/init.js" type="text/javascript"></script>

<% } else { %>

<div class="container container-bg">
  <div class="login-block">
    <form class="well login-form" action="/" method="post" accept-charset="utf-8">
      <label class="form-title">OSSII 聊天室</label>
      <input type="text"  placeholder="帳號" maxlength="10" name="login"><br/>
      <input type="password"  placeholder="密碼" maxlength="10" name="password"><br/>
      <button id="login-btn" type="submit" class="btn btn-large btn-primary">
        <i class="icon-lock icon-white"></i> Login
      </button><br/>
    </form>
    <a id="register-btn" href="create">Register</a>
  </div>
</div>

<% } %>
