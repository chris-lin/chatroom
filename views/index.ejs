<% if (isLogin) { %>
<link rel='stylesheet' href='/css/chat.css' />
<script src="/socket.io/socket.io.js" type="text/javascript"></script>
<script src="/js/script.js" type="text/javascript"></script>
<script src="/js/init.js" type="text/javascript"></script>

<div class="navbar navbar-fixed-top title-bar">
  <div class="navbar-inner title-bar-inner">
    <div class="container-fluid">
      <button class="btn btn-navbar title-bar-btn" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav pull-right dropdown">
        <a class="btn dropdown-toggle" href="#" data-toggle="dropdown">
          <i class="icon-user"></i>
          <span id="userName"><%= user.nickname %></span>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="#">帳號資料</a>
          </li>
          <li class="divider"></li>
          <li>
            <a href="/logout">登出</a>
          </li>
        </ul>
      </ul>
      <h1> <%= title %> </h1>
      <div class="nav-collapse in collapse title-bar-list">
        <ul class="nav">
          <li>
            <a href="#chat-users">在縣成員</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid main-box enyo-fit">

  <div class="row-fluid main-container">
    <div class="span10 chatBox">
      <div class="row-fluid chatContainer">
        <div class="span12">
          <div class="chat">
            <div class="chat-bd">
              <div class="chat-msgs"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 messagesBox">
          <form class="chat-form">
            <div class="chat-fl">
              <input class="chat-input" type="text" placeholder="輸入訊息" maxlength="200">
            </div>
            <div class="chat-fr">
              <a class="chat-submit btn btn-primary">
                <i class="icon-bullhorn"></i> 送出
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="span2 chat-usersBox">
      <div id="chat-users" class="chat-users">
          <div class="c">
            <span class="online-users"></span>
          </div>
        <div class="well sidebar-nav">
          <ul class="nav nav-list chat-usersList"></ul>
        </div>
      </div>
    </div>
  </div>
</div>

<% } else { %>

<div class="container container-bg">
  <div class="login-block">
    <form class="well login-form" action="/login" method="post" accept-charset="utf-8">
      <label class="form-title">OSSII 聊天室</label>
      <input type="email"  placeholder="Email" maxlength="50" name="email"><br/>
      <input type="password"  placeholder="密碼" maxlength="10" name="password"><br/>
      <button id="login-btn" type="submit" class="btn btn-large btn-primary">
        <i class="icon-lock icon-white"></i> Login
      </button><br/>
    </form>
    <a id="register-btn" href="create">Register</a>
  </div>
</div>

<% } %>
